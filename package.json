{
  "name": "browser-link-3",
  "version": "1.0.6",
  "description": "A URL router that acts as the default browser.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx vite build",
    "start": "bunx electron dist-electron/main.js",
    "lint": "bunx eslint . --ext .ts,.tsx",
    "package": "bun run build && bunx electron-builder",
    "release": "bun run build && bunx electron-builder --publish always",
    "publish": "bun run release"
  },
  "keywords": [
    "electron",
    "url"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@ffflorian/electron-icon-generator": "^1.7.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "electron-store": "^11.0.0",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "node-reg": "^0.2.4",
    "open": "^10.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0",
    "winreg": "^1.2.5",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tailwindcss/vite": "^4.1.13",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^11.0.0",
    "@types/winreg": "^1.2.36",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "eslint": "^9.36.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "appId": "com.yourcompany.browserlink3",
    "productName": "BrowserLink3",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/icons/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets/icons",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "win/icon.ico",
      "signAndEditExecutable": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "mac/icon.icns",
      "protocols": [
        {
          "name": "HTTP URL",
          "schemes": [
            "http",
            "https"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "png",
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "HenkDz",
      "repo": "browser-link-3",
      "releaseType": "release"
    }
  },
  "packageManager": "bun@1.2.22",
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
